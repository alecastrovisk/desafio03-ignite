generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnimalSize {
  MINI
  PEQUENO
  MEDIO
  GRANDE
  GIGANTE
}

enum AnimalAge {
  FILHOTE
  ADULTO
  IDOSO
}

enum EnergyLevel {
  BAIXA
  MEDIA
  ALTA
}

enum IndependenceLevel {
  BAIXA
  MEDIA
  ALTA
}

model Pet {
  id String @id @default(uuid())

  about String @db.VarChar(255)

  name String

  age AnimalAge

  energy_level EnergyLevel

  animal_size AnimalSize

  independence_level IndependenceLevel

  uf String

  city String

  created_at DateTime @default(now())

  Image Image[]

  Requirement Requirement[]

  Org Org @relation(fields: [orgId], references: [id])

  orgId String

  @@map("pets")
}

model Image {
  id String @id @default(uuid())

  Pet Pet @relation(fields: [petId], references: [id])

  petId String

  filename String

  path String

  created_at DateTime @default(now())

  updated_at DateTime @default(now())

  @@map("images")
}

model Requirement {
  id String @id @default(uuid())

  name String @db.VarChar(255)

  Pet Pet? @relation(fields: [petId], references: [id])

  petId String?

  @@map("requirements")
}

model Org {
  id String @id @default(uuid())

  adress String

  cep String?

  phone String

  email String @unique

  password_hash String

  pets Pet[]

  @@map("orgs")
}
